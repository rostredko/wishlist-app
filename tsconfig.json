{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["Components/*"],
      "@models/*": ["types/*"],
      "@hooks/*": ["hooks/*"],
      "@api/*": ["services/*"],
      "@lib/*": ["firebase/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}